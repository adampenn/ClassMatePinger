%ul{:class => "nav nav-tabs"}
  %li= link_to 'courses', courses_url
  %li{:class => "active"}= link_to 'Schools', schools_url 
  %li= link_to "Sign out", destroy_user_session_path, method: :delete

%h1 Listing Schools
%table.table.table-bordered.container-fluid
  %thead
    %tr
      %th Name
      %th{:colspan => "3"} Options
  %tbody
    - @schools.each do |school|
      %tr
        %td= school.name
        %td= link_to 'Show', school
        %td= link_to 'Edit', edit_school_path(school)
        %td= link_to 'Destroy', school, method: :delete, data: { confirm: '    Are you sure?' }
%br
  = link_to 'New School', new_school_path
  |
  = link_to 'Courses', courses_url
